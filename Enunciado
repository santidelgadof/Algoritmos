procedimiento ordenacionauxiliar (v[iz...dr])
  si izq< dr entonces 
    mitad = (izq + dr) div 2;
    intercambiar (v[iz], v[mitad]);
    x:= v[iz];
    i:=iz+1;
    j:= dr;
    mientras i<= j hacer 
      mientras i<= dr y v[i]<x hacer 
        i:= i+1;
      fin mientras
       mientras j>iz y v[j]>=x hacer 
        j:=j-1;
       fin mientras 
      si i<j entonces
        intercambiar (v[i], v[j])
      fin si
      fin mientras
      si j>iz entonces 
              intercambiar (v[j], v[iz]);
      fin si
      ordenacionauxiliar(v[iz..j-1]);
      ordenacionauxiliar(v[j+1..dr]);
     fin si
  fin procedimiento
  
  procedimiento ordenar (v[1..n])
   ordenacionauxiliar (v[1..n])
  finprocedimiento   


      
